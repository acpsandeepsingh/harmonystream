<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/player_gradient"
    android:paddingStart="12dp"
    android:paddingTop="10dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <!-- SEEK BAR ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp">

        <TextView
            android:id="@+id/timeCurrent"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0:00"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#B0B7C8" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />

        <TextView
            android:id="@+id/timeDuration"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#B0B7C8" />
    </LinearLayout>


    <!-- TRACK INFO ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="#B0B7C8"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnLike"
            android:src="@drawable/ic_favorite_border"
            android:background="@drawable/ripple_circle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="Like" />

        <ImageButton
            android:id="@+id/btnQueue"
            android:src="@drawable/ic_queue_music"
            android:background="@drawable/ripple_circle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="Queue" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:src="@drawable/ic_add"
            android:background="@drawable/ripple_circle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="Add" />
    </LinearLayout>


    <!-- CONTROLS ROW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp">

        <ImageButton
            android:id="@+id/btnMode"
            android:src="@drawable/ic_videocam"
            android:background="@drawable/ripple_circle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="Mode" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPrev"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/ripple_circle"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:contentDescription="Previous" />

            <ImageButton
                android:id="@+id/btnPlay"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/ripple_circle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Play" />

            <ImageButton
                android:id="@+id/btnNext"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/ripple_circle"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:contentDescription="Next" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/volumeBar"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:progress="100"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb" />
    </LinearLayout>

</LinearLayout>

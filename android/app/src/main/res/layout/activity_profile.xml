<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1220"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_panel"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Guest mode active"
            android:textColor="#B8C3E0" />

        <TextView
            android:id="@+id/profile_sync_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sync: local-only"
            android:textColor="#7F8BA8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_profile_show_login"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_primary"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_profile_show_signup"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Signup"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />

            <Button
                android:id="@+id/btn_profile_show_settings"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Settings"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_login_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Native Login"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_login_email_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF"
                android:textColorHint="#7F8BA8" />

            <EditText
                android:id="@+id/profile_login_display_name_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Display name (optional)"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF"
                android:textColorHint="#7F8BA8" />

            <Button
                android:id="@+id/btn_profile_login_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button_primary"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_signup_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Native Signup"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_signup_email_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF"
                android:textColorHint="#7F8BA8" />

            <EditText
                android:id="@+id/profile_signup_display_name_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Display name (optional)"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF"
                android:textColorHint="#7F8BA8" />

            <Button
                android:id="@+id/btn_profile_signup_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button_primary"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_settings_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_settings_display_name_input"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input"
                android:hint="Display name"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF"
                android:textColorHint="#7F8BA8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_profile_update_display_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_primary"
                    android:text="Save Settings"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_profile_sign_out"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Sign Out"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_profile_sync_now"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_primary"
            android:text="Sync Now"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_profile_close"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button_subtle"
            android:text="Close"
            android:textAllCaps="false"
            android:textColor="#EAF0FF" />
    </LinearLayout>
</ScrollView>

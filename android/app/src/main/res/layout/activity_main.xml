<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1220"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_panel"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HarmonyStream"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Account: Guest"
            android:textColor="#B8C3E0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_query_input"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="Search songs"
                android:hintTextColor="#7F8BA8"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="12dp"
                android:textColor="#EAF0FF" />

            <Spinner
                android:id="@+id/search_source_spinner"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_input" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_primary"
                android:text="Search"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_create_playlist"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />

            <Button
                android:id="@+id/btn_add_to_playlist"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Add"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />

            <Button
                android:id="@+id/btn_library"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Library"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_subtle"
                android:text="Profile"
                android:textAllCaps="false"
                android:textColor="#EAF0FF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@drawable/bg_panel"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/track_list_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading home catalog..."
            android:textColor="#98A3BE" />

        <TextView
            android:id="@+id/now_playing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Select a track"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playback_diagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lifecycle: idle"
            android:textColor="#7F8BA8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/track_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="6dp" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_repeat_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Repeat: Off"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />

                <Button
                    android:id="@+id/btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Previous"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />

                <Button
                    android:id="@+id/btn_play_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_primary"
                    android:text="Play"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />

                <Button
                    android:id="@+id/btn_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Queue"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />

                <Button
                    android:id="@+id/btn_fullscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Full Screen"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />

                <Button
                    android:id="@+id/btn_playback_diagnostics"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_button_subtle"
                    android:text="Diagnostics"
                    android:textAllCaps="false"
                    android:textColor="#EAF0FF" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
